@model Message

@{
    string color = "bg-danger";
    if (Model.IsSuccess) color = "bg-success";
    <div class="container text-center">
        <div class="row text-center" style="justify-content:center">
            <p class="badge @color" style="width: fit-content">@Model.MessageText</p>
        </div>
    </div>
}