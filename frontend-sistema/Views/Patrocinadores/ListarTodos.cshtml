@model IEnumerable<frontend_sistema.Models.Patrocinador>

<h1>Todos Patrocinadores</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Resposta/Status</th>
                <th scope="col">Responsavel</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patrocinador in Model)
            {
                <tr scope="row">
                    <td>@patrocinador.Nome</td>
                    <td><span class="badge @patrocinador.GetRespostaClassColor() small">@patrocinador.Resposta</span><b> / </b><span class="badge @patrocinador.GetStatusClassColor() small">@patrocinador.Status</span></td>
                    <td>@patrocinador.Responsavel</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Alterar" asp-route-id="@patrocinador.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@patrocinador.Id"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>