@model Patrocinador

<h1>Novo Patrocinador</h1>
<hr>
<div class="row">
    <div class="col">
        <form asp-action="Cadastrar" style="border: solid 1px black; padding: 20px;">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="control-label float-end" style="width: 80%;" />
                <span asp-validation-for="Nome" class="text-danger float-end"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="FormaDeContato"></label>
                <select asp-for="FormaDeContato" class="float-end" style="width: 60%;">
                    <option value="PESSOALMENTE">PESSOALMENTE</option>
                    <option value="MENSAGEM">MENSAGEM</option>
                </select>
                <span asp-validation-for="FormaDeContato" class="text-danger float-end"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Resposta"></label>
                <select asp-for="Resposta" class="float-end" style="width: 60%;">
                    <option value="SIM">SIM</option>
                    <option value="NAO">NÃO</option>
                    <option value="PENDENTE">PENDENTE</option>
                </select>
                <span asp-validation-for="Resposta" class="text-danger float-end"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="float-end" style="width: 60%;">
                    <option value="NAO">NÃO</option>
                    <option value="PENDENTE">PENDENTE</option>
                    <option value="PAGO - COM RESPOSAVEL">PAGO - COM RESPOSÁVEL</option>
                    <option value="PAGO - NA CONTA MOTIRO">PAGO - NA CONTA MOTIRÔ</option>
                </select>
                <span asp-validation-for="Status" class="text-danger float-end"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="control-label float-end" style="width: 30%;"/>
                <span asp-validation-for="Valor" class="text-danger float-end"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label><br>
                <textarea style="width: 100%; height: 80px;" asp-for="Observacoes" type="text" class="control-label" ></textarea>
                <span asp-validation-for="Observacoes" class="text-danger float-end"></span>
            </div>
            <br>
            <div class="form-group" hidden>
                <label asp-for="Responsavel"></label>
                <input asp-for="Responsavel" disabled value="@User.Identity.Name.ToUpper()" />
                <span asp-validation-for="Responsavel" class="float-end text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
                    </div>
                    <div class="col-6">
                        <input type="submit" value="Salvar" class="btn btn-success float-end" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>